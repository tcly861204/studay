{
  //禁用位运算符，位运算符在 JavaScript 中使用较少，经常是把 && 错输成 &
  "bitwise": true,

  // 变量未定义
  "undef": true,

  //为 true 时，禁止单引号和双引号混用
  "quotmark": false,

  //变量未使用
  "unused": true,

  //禁止出现空的代码块
  "noempty": true,

  //构造器函数首字母大写
  "newcap": true,

  //允许 proto（不是所有的浏览器都支持__proto__.） false禁止
  "proto": false,

  //禁止使用 arguments.caller 和 arguments.callee，未来会被弃用， ECMAScript 5 禁止使用 arguments.callee
  "noarg": true,

  // 严格模式
  "strict": true,

  //允许省略分号
  "asi": true,

  //定义全局变量
  "globals": {
    "console": true,
    "$": true
  }

}